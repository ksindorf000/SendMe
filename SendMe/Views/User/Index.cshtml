@model SendMe.Models.StudentViewModel

@{
    ViewBag.Title = "Index";
    ViewBag.CurrentUser = User.Identity.Name;
    ViewBag.userProfile = Model.User.UserName;
}
<!-----------PROFILE PIC------------->
<div class="row profile-header">
    <div class="col-md-12 text-center marb-35">
        <img class="thumb profile-pic" src="@Model.Upload.FilePath" style="max-width: 300px" />

        <!-----------HEADER------------->
        <h1 class="header-h">@Model.Student.FirstName @Model.Student.LastName</h1>
        <p>
            @Model.School.Name
        </p>
        @if (ViewBag.CurrentUser == ViewBag.userProfile)
        {
            <h4 id="manageAcct">
                @Html.ActionLink("Manage Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </h4>
        }
        <p class="header-p">
            @Model.Student.Bio
        </p>
        <p>
            @Model.User.Email
        </p>
        <p>
            @Model.Student.Year
        </p>
        <p>
            @Model.Student.Speciality
        </p>
        @Html.ActionLink("Donate", "Payment", "Donation", new {tripId = @Model.ActiveTrip.Id}, null )
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>@Model.ActiveTrip.Title</h3>
        <sub>@Model.ActiveTrip.Dates</sub>
        <p>
            @Model.ActiveTrip.Desc
        </p>
        <p>
            @Model.ActiveTrip.Destination <br />
            $@Model.ActiveTrip.TargetAmnt
        </p>
    </div>
</div>