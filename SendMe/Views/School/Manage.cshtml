@model SendMe.ViewModels.SchoolViewModel

@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your school's settings</h4>
    <hr />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

    <!--Name-->
        <div class="form-group">
            @Html.LabelFor(m => m.School.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.School.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.School.Name)
            </div>
        </div>

    <!--Address-->
        <div class="form-group">
            @Html.LabelFor(m => m.School.Address, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.School.Address, new { @class = "form-control" })
            </div>
        </div>

    <!--Website-->
        <div class="form-group">
            @Html.LabelFor(m => m.School.Website, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.School.Website, new { @class = "form-control" })
            </div>
        </div>

    <!--Submit-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
    }

    <!--Cover Image and Logo-->
    @Html.Partial("_Upload", new SendMe.Models.UploadViewModel())

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

