 <form name="DonationForm">
    Required
    <div class="group">
        <label>
            <span>Email</span>
            <input id="DonorEmail" class="field" placeholder="Example@Example.com" type="email" required />
        </label>
        <label>
            <span>Amount</span>
            <input class="field" placeholder="25.00" id="DonationAmount" type="number" min="0" required />
        </label>
        <label>
            <span>Card</span>
            <div id="card-element" class="field"></div>
        </label>
    </div>
     Optional
     <div class="group">
         <label>
             <span>Name</span>
             <input name="DonorName" id="DonorName" class="field" placeholder="Mic Anderson" type="text" maxlength="30" />
         </label>
         <label>
             <span>Phone</span>
             <input id="DonorPhoneNumber" class="field" placeholder="(555)-555-5555" type="tel" min="10" max="10" />
         </label>
     </div>
     <strong class="error"></strong>
     <div class="btn-group btn-group-lg" role="group">
         <button id="paymentBackBtn" type="button" class="btn btn-danger btn-circle" data-toggle="tooltip" data-placement="left" title="Go Back"><i class="glyphicon glyphicon-arrow-left"></i></button>
         <button type="submit" class="btn btn-success btn-circle" data-toggle="tooltip" data-placement="right" title="Submit Donation"><i class="glyphicon glyphicon-ok"></i></button>
     </div>
</form>
