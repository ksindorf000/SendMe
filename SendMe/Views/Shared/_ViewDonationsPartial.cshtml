@if (Model.User.UserName == User.Identity.Name && Model.ActiveTrip != null)
{
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Donations</h3></div>
            <div class="panel-body">
                <table class="table table-condensed" style="border-collapse:collapse;">

                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>Donation Amount</th>
                            <th>Donor Name</th>
                            <th>Donation Date/Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 0;}
                        @foreach (var donation in Model.ActiveTrip.Donations)
                        {
                            
                            <tr data-toggle="collapse" data-target="#collapse_@i" class="accordion-toggle">
                                <td><button class="btn btn-default btn-sm"><span class="glyphicon glyphicon-chevron-down"></span></button></td>
                                <td>$@donation.Amount .00</td>
                                <td>@donation.Donor.Name</td>
                                <td>@donation.Created</td>
                            </tr>
                            <tr>
                                <td colspan="12" class="hiddenRow">
                                    <div class="accordian-body collapse" id="collapse_@i">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr><th>Donation Message</th><th>Thank The Donor</th></tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        @donation.DonationMsg
                                                    <script> var Di = @i;</script>
                                                    </td>
                                                    <td>
                                                        <div id="donationsPanel" class="container">
                                                            @if (donation.HaveThanked == false && donation.Donor.Name != "Anonymous")
                                                            {
                                                                <button data-toggle="collapse" data-target="@("#thanks" + donation.Id)" class="btn btn-sm">
                                                                    <span class="glyphicon glyphicon-envelope"></span>
                                                                </button>
                                                                <div id="@("thanks" + donation.Id)" class="collapse">
                                                                    @using (Html.BeginForm("SendThankYou", "User", new { donId = donation.Id, stuId = Model.Student.Id }, FormMethod.Post))
                                                                    {
                                                                        <div class="form-actions no-color">
                                                                            <label for="#thnksMsg">Add a personal message!</label>
                                                                            <textarea rows="5" id="thanksMsg" name="thxMsg"></textarea>
                                                                            <button type="submit" class="btn btn-primary" id="sendThanksBtn" value="sendThanks">
                                                                                <span class="glyphicon glyphicon-send"> Send</span>
                                                                            </button>
                                                                        </div>
                                                                    }
                                                                </div>

                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
}